    <script>
    window.addEventListener('scroll', function() {
        const navbar = document.querySelector('.navbar');
        if (window.scrollY > 50) {
            navbar.classList.add('scrolled');
        } else {
            navbar.classList.remove('scrolled');
        }
    });
    window.addEventListener('load', function() {
        const preloader = document.getElementById('preloader');
        setTimeout(() => {
            preloader.style.opacity = '0';
            setTimeout(() => {
                preloader.style.display = 'none';
            }, 500);
        }, 800);
    });
    if ('serviceWorker' in navigator) {
        window.addEventListener('load', function() {
            navigator.serviceWorker.register('/service-worker.js')
                .then(registration => {
                    console.log('âœ… ServiceWorker registered:', registration.scope);
                    
                    setInterval(() => {
                        registration.update();
                    }, 60000);
                })
                .catch(error => {
                    console.log('âŒ ServiceWorker registration failed:', error);
                });
        });
    }
    let deferredPrompt;

    window.addEventListener('beforeinstallprompt', (e) => {
        e.preventDefault();
        deferredPrompt = e;
        console.log('ğŸ’¾ PWA install prompt ready');
    });
    window.addEventListener('appinstalled', async () => {
        console.log('âœ… PWA installed!');
        setTimeout(async () => {
            if (window.pushNotifications) {
                const granted = await window.pushNotifications.requestPermission();
                if (granted) {
                    console.log('ğŸ”” Push notifications enabled!');
                }
            }
        }, 3000);
    });

    window.addEventListener('load', () => {
        if ('Notification' in window) {
            if (Notification.permission === 'granted') {
                console.log('âœ… Notification permission: granted');
            } else if (Notification.permission === 'denied') {
                console.log('âŒ Notification permission: denied');
            } else {
                console.log('âš ï¸ Notification permission: not requested');
            }
        }
    });
    </script>
